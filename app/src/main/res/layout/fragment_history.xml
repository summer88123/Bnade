<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.summer.bnade.result.single.HistoryFragment"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        >


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                >

                <TextView
                    android:id="@+id/tv_one_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="24小时内"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="一周内"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_day_min"
                    />

                <TextView
                    android:id="@+id/tv_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="历史信息"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_week_min"
                    />

                <TextView
                    android:id="@+id/tv_day_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_day_max"
                    app:layout_constraintTop_toBottomOf="@+id/tv_one_day"
                    tools:text="15G"
                    />

                <TextView
                    android:id="@+id/tv_day_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_day_min"
                    app:layout_constraintRight_toLeftOf="@+id/tv_day_avg"
                    app:layout_constraintTop_toTopOf="@+id/tv_day_min"
                    tools:text="18G"
                    />

                <TextView
                    android:id="@+id/tv_day_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_day_max"
                    app:layout_constraintRight_toLeftOf="@+id/tv_day_count_avg"
                    app:layout_constraintTop_toTopOf="@+id/tv_day_max"
                    tools:text="16G"
                    />

                <TextView
                    android:id="@+id/tv_day_count_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_day_avg"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_day_avg"
                    tools:text="1111"
                    />

                <TextView
                    android:id="@+id/tv_week_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_week_max"
                    app:layout_constraintTop_toBottomOf="@+id/tv_week"
                    tools:text="11G"
                    />

                <TextView
                    android:id="@+id/tv_week_count_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_week_avg"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_week_avg"
                    tools:text="2222"
                    />

                <TextView
                    android:id="@+id/tv_week_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_week_max"
                    app:layout_constraintRight_toLeftOf="@+id/tv_week_count_avg"
                    app:layout_constraintTop_toTopOf="@+id/tv_week_max"
                    tools:text="18G"
                    />

                <TextView
                    android:id="@+id/tv_week_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_week_min"
                    app:layout_constraintRight_toLeftOf="@+id/tv_week_avg"
                    app:layout_constraintTop_toTopOf="@+id/tv_week_min"
                    tools:text="20G"
                    />

                <TextView
                    android:id="@+id/tv_history_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_history_max"
                    app:layout_constraintTop_toBottomOf="@+id/tv_history"
                    tools:text="11G"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:id="@+id/tv_history_count_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_history_avg"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_history_avg"
                    tools:text="3333"
                    />

                <TextView
                    android:id="@+id/tv_history_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_history_max"
                    app:layout_constraintRight_toLeftOf="@+id/tv_history_count_avg"
                    app:layout_constraintTop_toTopOf="@+id/tv_history_max"
                    tools:text="16G"
                    />

                <TextView
                    android:id="@+id/tv_history_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_history_min"
                    app:layout_constraintRight_toLeftOf="@+id/tv_history_avg"
                    app:layout_constraintTop_toTopOf="@+id/tv_history_min"
                    tools:text="22G"
                    />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/chart_one_day"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            />
        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/chart_history"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chart_one_day"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
